<%- layout("/layouts/boilerplate.ejs") %>

   <div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>
        <h1>Add New Stay</h1><br>
        
        <form action="/hotels" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-2">
                <label for="title" class="form-label">Title</label><br>
                <input name="hotel[title]" type="text" placeholder="Title of your hotel" id="title" class="form-control" required>
            </div>
            <div class="mb-2">
                <label for="description" class="form-label">About your Stay</label><br>
                <textarea name="hotel[description]" placeholder="About your hotel" id="description" class="form-control" required rows="5"></textarea>
            </div>
            <div class="mb-2">
                <label for="image" class="form-label">Upload Image</label><br>
                <input name="hotel[image]" type="file" id="image" class="form-control" required>
            </div>
            <div class="row">
                <div class="mb-2 col-md-5">
                    <label for="price" class="form-label">Price</label><br>
                    <input name="hotel[price]" type="text" placeholder="&#8377; 2,000" id="price" class="form-control" required>
                </div>
                <div class="mb-2 col-md-7">
                    <label for="country" class="form-label">Country</label><br>
                    <input name="hotel[country]" type="text" placeholder="India" id="country" class="form-control" required>
                </div>
            </div>
            <div class="mb-2">
                <label for="location" class="form-label">Location</label><br>
                <input name="hotel[location]" type="text" placeholder="Espalned, Kolkata" id="location" class="form-control" required>
            </div>
            <div class="mb-3">
                <div class="labelValues">
                    <label>Categories:</label><br>
                    <div class="form-check form-switch">
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="icon"> Icon
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="beach"> Beach
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="amazing_view"> Amazing View
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="amazing_pools"> Amazing Pools
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="rooms"> Rooms
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="caves"> Caves
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="farms"> Farms
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="beachfront"> Beach Front
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="castels"> Castels
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="cabins"> Cabins
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="tree_house"> Tree House
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="island"> Island
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="country_side"> Country Side
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="historical_homes"> Historical Homes
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="bed_breakfast"> Bed & Breakfast
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="top_cities"> Top Cities
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="tranding"> Trending
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="doms"> Doms
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="camping"> Camping
                        </label>
                        <br>
                        <label class="form-check-label" for="flexSwitchCheckDefault">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="hotel[section]" value="boats"> Boats
                        </label>
                        <br>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-outline-dark mb-4">Add Your Stay</button>
        </form>
    </div>
</div>