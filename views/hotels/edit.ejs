<%- layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <form action="/hotels/<%= detail._id%>/edit?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <h1>Edit</h1>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label><br>
                    <input type="text" name="hotel[title]" placeholder="" value="<%= detail.title%>" class="form-control" id="title" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label><br>
                    <textarea name="hotel[description]" id="description" class="form-control" id="description" rows="5" required><%= detail.description%>
                    </textarea>
                </div>

                <div class="mb-3">
                    Preview Image <br>
                    <img src="<%= sampleimage%>" alt="">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label><br>
                    <input type="file" name="hotel[image]" class="form-control" id="image">
                </div>


                <div class="mb-3">
                    <label for="price" class="form-label">Price</label><br>
                    <input type="text" name="hotel[price]" value="<%= detail.price%>" id="price" class="form-control" required>
                </div>


                <div class="mb-3">
                    <label for="country" class="form-label">Country</label><br>
                    <input type="text" name="hotel[country]" value="<%= detail.country%>" id="country" class="form-control" required>
                    <br>
                </div >


                <div class="mb-3">
                    <label for="location" class="form-label">Location</label><br>
                    <input type="text" name="hotel[location]" value="<%= detail.location%>" class="form-control" id="location" required>
                </div>
                
                <button class="btn btn-outline-dark edit-btn">Done</button>
                <br><br>
            </form>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
